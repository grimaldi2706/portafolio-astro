---
import data from "../data/data.json";

let dataProfessional = data.dataProfessional;
let dataPersonal =  data.dataPersonal;
---
<section class="max-w-6xl mx-auto px-8 py-24 grid md:grid-cols-2 gap-16 items-center">
  <div>
    <h2 class="text-6xl font-bold leading-tight">
    {dataProfessional.title1}<span class="text-[#00b4ff]">{dataProfessional.title2}</span>,
    </h2>
    <p class="mt-6 text-neutral-400 max-w-lg">
       {dataProfessional.summary}
    </p>

    <div class="mt-10 flex gap-4">
      <a
        href="#proyectos"
        class="px-8 py-3 rounded-full bg-[#00b4ff] text-black font-semibold hover:scale-105 transition-transform"
      >
        Ver proyectos
      </a>
    </div>
  </div>

<div class="relative flex justify-center">
  <div
    class="absolute -inset-2 bg-[#00b4ff] opacity-1 blur-xl rounded-full animate-slow-pulse"
  ></div>
  <img
    src={dataPersonal.image}
    alt="Foto profesional"
    class="relative w-64 h-64 md:w-80 md:h-80 object-cover rounded-full border border-white/10 shadow-2xl"
  />
</div>


</section>
